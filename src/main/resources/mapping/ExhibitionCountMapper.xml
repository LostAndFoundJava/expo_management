<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.honger.expo.dao.ExhibitionCountMapper">
    <select id="selectExistByExhibitionId" resultType="java.lang.Integer">
        select count(*) from `exhibition_count` where `exhibition_id` = #{exhibitionId} and `delete`=0;
    </select>

    <insert id="insertExhibitonIdCount">
        INSERT INTO `exhibition_count` (`id`, `exhibition_id`, `create_time`,
        `update_time`)
        VALUES
	    (#{id}, #{exhibitionId}, #{createTime}, #{updateTime});
    </insert>

    <update id="updateExhibitionIdCount">
        update `exhibition_count` set count = count + 1 where `exhibition_id` = #{exhibitionId};
    </update>

    <select id="selectCountByExhibitonId" resultType="java.lang.Integer">
        select `count` from `exhibition_count` where `exhibition_id` = #{exhibitionId}
    </select>
</mapper>